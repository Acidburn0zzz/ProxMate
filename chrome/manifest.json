{
  "manifest_version": 2,
  "name": "ProxMate - unblock the Internet!",
  "version": "2.0",
  "description": "Unblock youtube, grooveshark, hulu, google play and pandora for free!",
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options/options.html",
  "homepage_url": "http://personalitycores.com/projects/proxmate/",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/results*"],
      "js": ["lib/jquery-1.7.1.min.js","lib/fx.js","sites/youtube-search.js"]
    },{
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["lib/jquery-1.7.1.min.js","lib/fx.js","sites/youtube.js"]
    },{
      "matches": ["*://*.grooveshark.com/*"],
      "js": ["lib/jquery-1.7.1.min.js","lib/fx.js","sites/grooveshark.js"]
    },
    {
      "matches": ["*://*.pandora.com/*"],
      "js": ["lib/jquery-1.7.1.min.js","lib/fx.js","sites/pandora.js"]
    },
    {
      "matches": ["*://*.personalitycores.com/projects/proxmate/"],
      "js": ["lib/jquery-1.7.1.min.js","lib/fx.js","sites/personalitycores.js"]
    },
    {
      "matches": ["*://*.hulu.com/*"],
      "js": ["lib/jquery-1.7.1.min.js","lib/fx.js","sites/hulu.js"]
    },
    {
      "matches": ["*://play.google.com/*"],
      "js": ["lib/jquery-1.7.1.min.js","lib/fx.js","sites/gplay.js"]
    }
  ],
  "browser_action": {
    "default_title": "Click to enable / disable ProxMate",
    "default_icon": "images/icon128.png"
  },
  "icons": {
    "48": "images/icon48.png",
    "16": "images/icon16.png",
    "128": "images/icon128.png"
   }, 
   "web_accessible_resources": [
    "elements/overlay.html",
    "elements/banner.html",
    "elements/overlay.css",
    "images/load.gif",
    "images/waitajax.gif",
    "images/background-wrapper.png",
    "images/background-body.png",
    "images/icon48.png",
    "images/cross.png"
  ],
  "permissions": [
    "proxy",
    "http://www.personalitycores.com/",
    "http://youtube.com/",
    "http://*/"
  ]
}