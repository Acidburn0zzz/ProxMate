{
  "manifest_version": 2,
  "name": "ProxMate - unblock the Internet!",
  "version": "2.2",
  "description": "Removes country restrictions for FREE! Just like that.",
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options/options.html",
  "homepage_url": "http://proxmate.dave.cx/",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/results*"],
      "js": ["lib/jquery-1.7.1.min.js","lib/fx.js","modules/youtube-search.js"]
    },
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["lib/jquery-1.7.1.min.js","lib/fx.js","modules/youtube.js"]
    },
    {
      "matches": ["*://*.youtube.com/channel/*"],
      "js": ["lib/jquery-1.7.1.min.js","lib/fx.js","modules/youtube-channel.js"]
    },
    {
      "matches": ["*://*/*"],
      "js": ["lib/jquery-1.7.1.min.js","lib/fx.js","modules/bannerLoader.js"]
    }
  ],
  "browser_action": {
    "default_title": "Click to enable / disable ProxMate",
    "default_icon": "images/icon128.png"
  },
  "icons": {
    "48": "images/icon48.png",
    "24": "images/icon24.png",
    "16": "images/icon16.png",
    "128": "images/icon128.png"
   },
   "web_accessible_resources": [
    "elements/overlay.html",
    "elements/banner.html",
    "elements/overlay.css",
    "images/load.gif",
    "images/waitajax.gif",
    "images/background-wrapper.png",
    "images/background-body.png",
    "images/icon48.png",
    "images/cross.png",
    "elements/youtube-proxmatebar.html",
    "elements/youtube-proxmatebar.css",
    "images/uk.png",
    "images/us.png"
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "proxy",
    "http://youtube.com/",
    "*://*/",
    "tabs",
    "webNavigation",
    "storage"
  ]
}